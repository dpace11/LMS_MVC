<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> LMS_MVC</title>
    <link rel="stylesheet" href="~/Content/CSS/style.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS_MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b><i class="fa fa-book"></i>LMS</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                           <b> <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@*<i class="fa fa-fw fa-home">*@</i>Home</a></b>
                        </li>
                     
                         
                         <li class="nav-item">
                             <b><a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">@*<i class='fas fa-graduation-cap'>*@</i>Student Details</a></b>
                        </li>

                        <li class="nav-item">
                           <b> <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">@*<i class="fa fa-book fa-bounce" aria-hidden="true"></i>*@Book Details</a></b>
                           
                      
                        </li>

                         <li class="nav-item">
                             <b><a class="nav-link text-dark" asp-area="" asp-controller="BookIssueReturns" asp-action="Index">Book Issue/Return</a></b>
                        </li>

                         <li class="nav-item">
                             <b><a class="nav-link text-dark" asp-area="" asp-controller="Memberships" asp-action="Index">Membership</a></b>
                        </li>
                        
                         <li class="nav-item">
                             <b><a class="nav-link text-dark" asp-area="" asp-controller="Author1" asp-action="Index">Author</a></b>
                        </li>

                          <li class="nav-item">
                             <b><a class="nav-link text-dark" asp-area="" asp-controller="Publications" asp-action="Index">Publication</a></b>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
       @* <div class="container">
            &copy; 2023 - LMS_MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
