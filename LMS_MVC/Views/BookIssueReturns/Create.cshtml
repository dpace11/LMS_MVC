@model LMS_MVC.Models.BookIssueReturn

@{
    ViewData["Title"] = "Create";
}



<h4>Issue Book to Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <table width="650px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <tr>
                <td colspan="2">
                    @if( ViewBag.error = true)
                    {
             
                        <h4>@ViewBag.ErrorMessage</h4>
                    }

                </td>
            </tr>


            <div class="form-group">

                <tr><td><strong><label asp-for="RollNo" class="control-label"></label></strong></td><td>
                <input asp-for="RollNo" class="form-control" />
                <span asp-validation-for="RollNo" class="text-danger"></span></td></tr>
            </div>

            <div class="form-group">
                 <tr><td><strong><label asp-for="Name" class="control-label"></label></strong></td><td>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span></td></tr>
            </div>

            <div class="form-group">
                <tr><td> <strong><label asp-for="Departmet" class="control-label"></label></strong></td><td>
                <select asp-for="Departmet" class="form-control" >
                 <option>Architecture</option>
                    
                    <option>Civil</option>
                    
                    <option>Computer</option>
                    
                    <option>Electronics</option>
                </select>

                <span asp-validation-for="Departmet" class="text-danger"></span></td></tr>
            </div>

            <div class="form-group">
                <tr><td> <strong><label asp-for="BookIssueDate" class="control-label"></label></strong></td><td>
                <input asp-for="BookIssueDate" class="form-control" />
                <span asp-validation-for="BookIssueDate" class="text-danger"></span></td></tr>
            </div>

           @* <div class="form-group">
                <tr><td><strong> <label asp-for="BookReturnDate" class="control-label"></label></strong></td><td>
                <input asp-for="BookReturnDate" class="form-control" />
                <span asp-validation-for="BookReturnDate" class="text-danger"></span></td></tr>
            </div>*@

            <div class="form-group">
                <tr><td> <strong><label asp-for="BookID" class="control-label"></label></strong></td><td>
                <select asp-for="BookID" class ="form-control" asp-items="ViewBag.BookID"></select></td></tr>
            </div>

           
            <div class="form-group">
                 <tr><td><input type="submit" value="Issue " class="btn btn-primary" /></td><td>
                <a asp-action="Index" class="btn btn-primary">Back to List</a></td></tr>
            </div>            
             
            
              
            </table>
        </form>
    </div>
</div>

