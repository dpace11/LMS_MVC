@model LMS_MVC.Models.BookIssueReturn

@{
    ViewData["Title"] = "Edit";
}


<h3>Return Book</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RollNo" class="control-label"></label>
                <input asp-for="RollNo" class="form-control" readonly/>
                <span asp-validation-for="RollNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Departmet" class="control-label"></label>
                <input asp-for="Departmet" class="form-control"readonly />
                <span asp-validation-for="Departmet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookIssueDate" class="control-label"></label>
                <input asp-for="BookIssueDate" class="form-control" readonly/>
                <span asp-validation-for="BookIssueDate" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="ActualReturnDate" class="control-label"></label>
                <input asp-for="ActualReturnDate" class="form-control" readonly/>
                <span asp-validation-for="ActualReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookReturnDate" class="control-label"></label>
                <input asp-for="BookReturnDate" class="form-control" />
                <span asp-validation-for="BookReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookID" class="control-label"></label>
                <select asp-for="BookID" class="form-control" asp-items="ViewBag.BookID" readonly ></select>
                <span asp-validation-for="BookID" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Return Book" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>

             <h7> 
                @if( ViewBag.error = true)
            {
             
               <h4>@ViewBag.ErrorMessage</h4>
            }
            </h7>
        </form>
    </div>
</div>

