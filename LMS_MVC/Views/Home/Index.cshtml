@{
    ViewData["Title"] = "Home Page";
}

<style>
.box {
  width: 200px;
  height: 100px;
  border: 1px solid black;
  margin: 10px;
  padding: 10px;
  display: inline-block;
  vertical-align: top;
  background-color: #7F6DF3;
  transition: background-color 0.4s ease;
  text-align: center; /* Align the text in the center of the box */
}

.box:hover {
  background-color: #6B4C4C;
}

.box h6 {
  margin: 0;
  font-size: 16px;
  font-weight: bold;
}

.box span {
  font-weight: normal;
}

.box  h4{
     margin: 0;
  font-size: 25px;
  font-weight: bold;
}

</style>
