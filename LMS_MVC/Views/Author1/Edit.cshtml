@model LMS_MVC.Models.Author1

@{
    ViewData["Title"] = "Edit";
}



<h4>Edit Author Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <table width="550px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
