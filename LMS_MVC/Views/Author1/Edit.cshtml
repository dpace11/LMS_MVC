                </div>
                <div class="form-group">
                     <tr><td><b> <label asp-for="Address" class="control-label"></label></td><td>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span></td></tr> 
                </div>
                <div class="form-group">
                      <tr><td><b><label asp-for="PhoneNumber" class="control-label"></label></td><td>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span></td></tr> 
                </div>
                <div class="form-group">
                     <tr><td><b> <label asp-for="Email" class="control-label"></label></td><td>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span></td></tr> 
                </div>
                <div class="form-group">
                     <tr><td> <b><label asp-for="ImagePath" class="control-label"></label></td><td>
                    <input asp-for="ImagePath" class="form-control" type="file" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span></td></tr> 
                </div>
                <div class="form-group">
                      <tr><td><input type="submit" value="Save" class="btn btn-primary" /></td><td>
                     <a asp-action="Index" class="btn btn-primary">Back to List</a></td></tr> 
                </div>
            </table>
        </form>
    </div>
</div>

