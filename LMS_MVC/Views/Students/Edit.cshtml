@model LMS_MVC.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h5>Edit Student Record</h5>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <table width="750px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentID" />
            <div class="form-group">
               <tr><td> <label asp-for="StudentRollNo" class="control-label"></label></td><td>
                <input asp-for="StudentRollNo" class="form-control" />
                <span asp-validation-for="StudentRollNo" class="text-danger"></span></td></tr>
            </div>
            <div class="form-group">
               <tr><td> <label asp-for="StudentName" class="control-label"></label></td><td>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span></td></tr>
            </div>
            <div class="form-group">
               <tr><td> <label asp-for="Department" class="control-label"></label></td><td>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span></td></tr>
            </div>
            <div class="form-group">
               <tr><td> <label asp-for="Semester" class="control-label"></label></td><td>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span></td></tr>
            </div>
            <div class="form-group">
               <tr><td> <label asp-for="StudentContact" class="control-label"></label></td><td>
                <input asp-for="StudentContact" class="form-control" />
                <span asp-validation-for="StudentContact" class="text-danger"></span></td></tr>
            </div>
            <div class="form-group">
               <tr><td> <label asp-for="StudentEmail" class="control-label"></label></td><td>
                <input asp-for="StudentEmail" class="form-control" />
                <span asp-validation-for="StudentEmail" class="text-danger"></span></td></tr>
            </div>
            <br />
            <div class="form-group">
               <tr><td> <input type="submit" value="Save" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-primary">Back to List</a></td></tr>
            </div>
            </table>
        </form>
    </div>
</div>
<br />
